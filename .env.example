# ======================================

# AuraEdit Environment Variables

# ======================================

# App

NEXT_PUBLIC_APP_NAME=AuraEdit

NEXT_PUBLIC_APP_URL=http://localhost:3000

# ======================================

# Gemini API Keys (Primary + Backups)

# Rotate automatically via cascade logic

# ======================================

GEMINI_API_KEY_1=your_google_gemini_key_1

GEMINI_API_KEY_2=your_google_gemini_key_2

GEMINI_API_KEY_3=your_google_gemini_key_3

GEMINI_API_KEY_4=your_google_gemini_key_4

GEMINI_API_KEY_5=your_google_gemini_key_5

# ======================================

# Gemini Models (Model-agnostic)

# ======================================

GEMINI_PRIMARY_MODEL=gemini-3-flash-preview

GEMINI_BACKUP_MODEL=gemini-2.5-flash

# ======================================

# AI Build Limits & Safety

# ======================================

AI_MAX_RETRIES=10

AI_MAX_FILES_PER_BUILD=500

AI_TIMEOUT_MS=120000

# ======================================

# SEO / Indexing

# ======================================

NEXT_PUBLIC_INDEXING=true

# ======================================

# Logging

# ======================================

LOG_LEVEL=info